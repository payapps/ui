  "main": "./build/index.js",
  "module": "./build/index.es.js",
  "files": [
    "build"
  ],
  "source": "src/index.ts",
  "dependencies": {
    "@chakra-ui/react": "^1.6.6",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
